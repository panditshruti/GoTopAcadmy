<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.searchFragment"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F3D4F8"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/strok"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Translator"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/purple_700"
               android:textSize="15dp"
                android:id="@+id/linkTranslator"
                android:layout_margin="10dp"
                android:text="https://g.co/kgs/Huy4Xmy"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E2FFE3"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/strok"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Vacancy Search"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/purple_700"
               android:textSize="15dp"
                android:id="@+id/vacancySearch"
                android:layout_margin="10dp"
                android:text="https://www.sarkariresult.com/"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>